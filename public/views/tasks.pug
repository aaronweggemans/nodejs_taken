extends layout

block content
    .container
        .row
            .col-md-8.offset-2
                h1= title
                p.
                    Allen taken die zijn toegevoegd in de database

                ul.list-group
                    each item in database
                        li.list-group-item.d-flex.justify-content-between.align-items-center
                            a(href='task/'+item.Id) #{item.title}
                            form(method="post" action="task?_method=DELETE&id=" + item.Id style="margin: 0; padding: 0;")
                                input(class="btn btn-danger btn-sm" type="submit" value="Verwijder taak")